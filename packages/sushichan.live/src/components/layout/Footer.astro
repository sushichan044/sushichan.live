---
import { tv } from "tailwind-variants";

import ContentLayout from "../common/ContentLayout.astro";
import Link from "../element/Link.astro";

const styles = tv({
  slots: {
    root: "h-[80px] w-full",
    wrapper: "flex flex-row items-center justify-between gap-x-4 gap-y-2",
  },
})();
---

<footer class:list={styles.root()}>
  <ContentLayout class:list={styles.wrapper()}>
    <p>© 2024 sushichan044</p>
    <Link href="/legal/privacy" variants={{ decoration: "none" }}>
      プライバシーポリシー
    </Link>
  </ContentLayout>
</footer>
